{
	"version": 8,
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
				"BUILD_TESTING": "ON",
				"CMAKE_COMPILE_WARNING_AS_ERROR": "ON",
				"ENABLE_VTK_OUTPUT": "ON",
				"LOG_LEVEL": "INFO"
			}
		},
		{
			"name": "debug-base",
			"hidden": true,
			"inherits": "base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"ENABLE_SANITIZERS": "ON",
				"ENABLE_COVERAGE": "ON",
				"LOG_LEVEL": "TRACE"
			},
			"environment": {
				"LSAN_OPTIONS": "suppressions=${fileDir}/utils/lsan_ignorelist"
			}
		},
		{
			"name": "test-lite-base",
			"hidden": true,
			"description": "Runtime tests only, no VTK output, no static analysis",
			"inherits": "debug-base",
			"cacheVariables": {
				"ENABLE_VTK_OUTPUT": "OFF"
			}
		},
		{
			"name": "test-base",
			"hidden": true,
			"inherits": "test-lite-base",
			"cacheVariables": {
				"ENABLE_CLANG_TIDY": "ON",
				"ENABLE_STATIC_TESTING": "ON"
			}
		},
		{
			"name": "release-base",
			"hidden": true,
			"inherits": "base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
			}
		},
		{
			"name": "gcc",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_CXX_COMPILER": "g++"
			}
		},
		{
			"name": "clang",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},
		{
			"name": "release",
			"inherits": ["release-base", "gcc"],
			"displayName": "Release (GCC)",
			"description": "Configure Release build with GCC"
		},
		{
			"name": "debug",
			"inherits": ["debug-base", "gcc"],
			"displayName": "Debug (GCC)",
			"description": "Configure Debug build with GCC"
		},
		{
			"name": "test-lite",
			"inherits": ["test-lite-base", "gcc"],
			"displayName": "Lite Tests (GCC)",
			"description": "Configure lightweight Test build with GCC"
		},
		{
			"name": "test",
			"inherits": ["test-base", "gcc"],
			"displayName": "Full Tests (GCC)",
			"description": "Configure complete Test build with GCC"
		},
		{
			"name": "release-clang",
			"inherits": ["release-base", "clang"],
			"displayName": "Release (Clang)",
			"description": "Configure Release build with Clang"
		},
		{
			"name": "debug-clang",
			"inherits": ["debug-base", "clang"],
			"displayName": "Debug (Clang)",
			"description": "Configure Debug build with Clang"
		},
		{
			"name": "test-lite-clang",
			"inherits": ["test-lite-base", "clang"],
			"displayName": "Lite Tests (Clang)",
			"description": "Configure lightweight Test build with Clang"
		},
		{
			"name": "test-clang",
			"inherits": ["test-base", "clang"],
			"displayName": "Full Tests (Clang)",
			"description": "Configure complete Test build with Clang"
		}
	],
	"buildPresets": [
		{
			"name": "base",
			"hidden": true,
			"jobs": 0
		},
		{
			"name": "release-build",
			"inherits": "base",
			"configurePreset": "release"
		},
		{
			"name": "debug-build",
			"inherits": "base",
			"configurePreset": "debug"
		},
		{
			"name": "test-lite-build",
			"inherits": "base",
			"configurePreset": "test-lite"
		},
		{
			"name": "test-build",
			"inherits": "base",
			"configurePreset": "test"
		},
		{
			"name": "release-clang-build",
			"inherits": "base",
			"configurePreset": "release-clang"
		},
		{
			"name": "debug-clang-build",
			"inherits": "base",
			"configurePreset": "debug-clang"
		},
		{
			"name": "test-lite-clang-build",
			"inherits": "base",
			"configurePreset": "test-lite-clang"
		},

		{
			"name": "test-clang-build",
			"inherits": "base",
			"configurePreset": "test-clang"
		},
		{
			"name": "documentation-build",
			"inherits": "base",
			"configurePreset": "release",
			"targets": [ "doc_doxygen" ]
		}
	],
	"testPresets": [
		{
			"name": "base",
			"hidden": true,
			"execution": { "jobs": 0 },
			"output": {
				"outputOnFailure": true
			}
		},
		{
			"name": "test",
			"inherits": "base",
			"configurePreset": "test"
		},
		{
			"name": "test-clang",
			"inherits": "base",
			"configurePreset": "test-clang"
		},
		{
			"name": "test-lite",
			"inherits": "base",
			"configurePreset": "test-lite"
		},
		{
			"name": "test-lite-clang",
			"inherits": "base",
			"configurePreset": "test-lite-clang"
		}
	],
	"workflowPresets": [
		{
			"name": "release",
			"description": "Configure and build Release with GCC",
			"steps": [
				{ "type": "configure", "name": "release" },
				{ "type": "build",     "name": "release-build" }
			]
		},
		{
			"name": "release-clang",
			"description": "Configure and build Release with Clang",
			"steps": [
				{ "type": "configure", "name": "release-clang" },
				{ "type": "build",     "name": "release-clang-build" }
			]
		},
		{
			"name": "test",
			"description": "Run all tests with GCC",
			"steps": [
				{ "type": "configure", "name": "test" },
				{ "type": "build",     "name": "test-build" },
				{ "type": "test",      "name": "test" }
			]
		},
		{
			"name": "test-clang",
			"description": "Run all tests with Clang",
			"steps": [
				{ "type": "configure", "name": "test-clang" },
				{ "type": "build",     "name": "test-clang-build" },
				{ "type": "test",      "name": "test-clang" }
			]
		},
		{
			"name": "test-lite",
			"description": "Run runtime tests with GCC",
			"steps": [
				{ "type": "configure", "name": "test-lite" },
				{ "type": "build",     "name": "test-lite-build" },
				{ "type": "test",      "name": "test-lite" }
			]
		},
		{
			"name": "test-lite-clang",
			"description": "Run runtime tests with Clang",
			"steps": [
				{ "type": "configure", "name": "test-lite-clang" },
				{ "type": "build",     "name": "test-lite-clang-build" },
				{ "type": "test",      "name": "test-lite-clang" }
			]
		},
		{
			"name": "documentation",
			"description": "Build documentation with Doxygen",
			"steps": [
				{ "type": "configure", "name": "release" },
				{ "type": "build",     "name": "documentation-build" }
			]
		}
	]
}
